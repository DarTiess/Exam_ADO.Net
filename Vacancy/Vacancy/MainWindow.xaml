<Window x:Class="Vacancy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Vacancy"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="600" ResizeMode="NoResize">
    <Grid>
        <Menu Height="30" VerticalAlignment="Top">
            <MenuItem Header="Категории вакансий"
                      x:Name="category"
                      Click="category_Click"></MenuItem>
            <MenuItem Header="Поиск вакансий"
                      x:Name="find"
                      Click="find_Click"></MenuItem>
            <MenuItem Header="Настройки"
                      x:Name="setting"
                    >
                <MenuItem Header="Статисчтическая информация"></MenuItem>
                <MenuItem Header="Настройка базы данных"></MenuItem>
            </MenuItem>
        </Menu>
        <Image Source="E:\GitHub\Exam_ADO.Net\Vacancy\Vacancy\1.jpg"></Image>
        <Frame NavigationUIVisibility="Hidden" x:Name="CentralFrame"></Frame>
    </Grid>
</Window>
